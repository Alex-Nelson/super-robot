<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    android:label="@string/app_name"
    app:startDestination="@id/displayFragment">

    <fragment
        android:id="@+id/displayFragment"
        android:name="com.example.ibuyapp.display.DisplayFragment"
        android:label="DisplayFragment"
        tools:layout="@layout/fragment_display" >
        <action
            android:id="@+id/action_displayFragment_to_manageListFragment"
            app:destination="@id/manageListFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popUpTo="@id/displayFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/manageListFragment"
        android:name="com.example.ibuyapp.manage.ManageListFragment"
        android:label="ManageListFragment"
        tools:layout="@layout/fragment_manage_list">
        <argument
            android:name="id"
            app:argType="long" />
        <action
            android:id="@+id/action_manageListFragment_to_displayFragment"
            app:destination="@id/displayFragment" />
    </fragment>
</navigation>